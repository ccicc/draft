{
    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "implideStrict": true,
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "extends": [ "airbnb" ],

    "plugins": [
        "import",
        "react",
        "jsx-a11y"
    ],

    "rules": {

        // stylisitc issues

        "indent": [1, 4, {
            "SwitchCase": 1,
            "flatTernaryExpressions": true
        }],
        
        "linebreak-style": [0],

        "comma-dangle": [1,"only-multiline"],
        "consistent-return": [0],

        "no-confusing-arrow": [0],
        "no-param-reassign": [0],
        "no-return-assign": [0],
        "no-plusplus": [0],
        "no-console": [0],
        "no-lonely-if": [0],
        "no-unused-expressions": [0],

        "arrow-body-style": [0],
        "arrow-parens": [0],
        "quote-props": [0],

        // react
        "react/jsx-indent": [0],
        "react/jsx-indent-props": [1,4],
        "react/require-default-props": [0],
        "react/forbid-prop-types": [0],
        "react/prop-types": [0],
        "react/prefer-stateless-function": [0],
        "react/no-multi-comp": [0],
        "react/no-array-index-key": [0],

        //import
        "import/prefer-default-export": [0],

        //jsx-a11y
        "jsx-a11y/no-static-element-interactions": [0]
    }
}
